# ============================================
# Application Settings
# ============================================
SECRET_KEY=your-secret-key-minimum-32-characters-long-change-this-in-production
ENVIRONMENT=development
DEBUG=True
APP_NAME=811 Ticket Tracker
FRONTEND_URL=http://localhost:5173

# ============================================
# Database
# ============================================
DATABASE_URL=sqlite:///./tickets.db
# Production: DATABASE_URL=postgresql://user:password@host:5432/dbname

# ============================================
# Authentication
# ============================================
MAGIC_LINK_EXPIRATION_MINUTES=15
ACCESS_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# ============================================
# Email / SMTP
# ============================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_FROM_EMAIL=noreply@your-domain.com
SMTP_FROM_NAME=811 Ticket Tracker
SMTP_USE_TLS=True

# Development: Use MailHog or Mailtrap
# SMTP_HOST=localhost
# SMTP_PORT=1025
# SMTP_USER=
# SMTP_PASSWORD=

# ============================================
# Notifications
# ============================================
NOTIFICATION_HOUR=8
NOTIFICATION_TIMEZONE=America/New_York
EXPIRATION_WARNING_DAYS=5

# ============================================
# Admin
# ============================================
ADMIN_EMAIL=admin@your-company.com

# ============================================
# CORS
# ============================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
# Production: ALLOWED_ORIGINS=https://your-frontend.vercel.app
